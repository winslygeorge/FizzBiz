    <script>
      function onSignIn(googleUser) { var profile =
      googleUser.getBasicProfile(); console.log('ID: ' + profile.getId()); // Do
      not send to your backend! Use an ID token instead. console.log('Name: ' +
      profile.getName()); console.log('Image URL: ' + profile.getImageUrl());
      var email = profile.getEmail() // This is null if the 'email' scope is not
      present. var xhttp = new XMLHttpRequest(); xhttp.onreadystatechange =
      function () { if (this.readyState == 4 && this.status == 200) { var resq =
      JSON.parse(this.responseText); if(resq.code == 200){ window.location.href
      = "https://www.fizzbiznetwork.com/apps/all"; }else if (resq.code == 309){
      alert ("Email doesn't Exist!!!") } else if (resq.code == 308){
      window.location.replace("https://www.fizzbiznetwork.com/emailverification");
      }else { alert ("Login Failed!!!") } } }; xhttp.open("GET",
      "/googleLoginUser?userName= "+ email, true);
      xhttp.setRequestHeader("Content-type",
      "application/x-www-form-urlencoded"); xhttp.send(); }
    </script>

